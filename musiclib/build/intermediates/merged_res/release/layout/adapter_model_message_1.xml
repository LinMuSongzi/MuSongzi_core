    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" android:tag="layout/adapter_model_message_1_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <com.musongzi.comment.view.CircleImageView
            android:id="@+id/id_image"
            android:tag="binding_1"          
            android:layout_width="@dimen/cover_s_dp"
            android:layout_height="@dimen/cover_s_dp"
            android:src="@mipmap/ic_normal_women_hear"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_title_dp"
                    android:textColor="@color/text_color_select"
                    android:tag="binding_2"          
                    tools:text="转角遇见你" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/item_content_dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_normal"
                    android:tag="binding_3"                                                    
                    tools:text="一周前" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
         